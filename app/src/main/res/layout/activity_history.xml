                    style="@style/viewParent.headerText.homeCardContent"
                    android:text="History"
                    android:textSize="30dp"
                    />

                <TextView
                    android:id="@+id/subTitle"
                    style="@style/viewParent.headerText.contentText"
                    android:layout_below="@+id/mainTitle"
                    android:layout_marginBottom="20dp"
                    android:text="List of borrow item..."
                    android:textColor="@android:color/white"/>


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:minHeight="100dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/itemName1"
                        android:textColor="#fdb501"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:text="Projector" />

                    <TextView
                        android:id="@+id/Code1"
                        style="@style/viewParent.headerText.contentText"
                        android:layout_below="@id/itemName1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="0dp"
                        android:text="Code : "
                        android:textColor="#fdb501"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/itemCode1"
                        style="@style/viewParent.headerText.contentText"
                        android:layout_below="@id/itemName1"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:textColor="#EE6A90B5"
                        android:text="IT-003" />

                    <TextView
                        android:id="@+id/date"
                        style="@style/viewParent.headerText.contentText"
                        android:layout_below="@id/itemCode1"
                        android:textColor="#fdb501"
                        android:text="Borrowed date : "
                        android:layout_marginStart="15dp"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/dateBorrow"
                        style="@style/viewParent.headerText.contentText"
                        android:layout_below="@id/date"
                        android:textSize="12dp"
                        android:layout_marginStart="15dp"
                        android:text="12-12-2020"
                        android:textColor="#EE6A90B5" />

                    <TextView
                        android:id="@+id/desc1"
                        style="@style/viewParent.headerText.contentText"
                        android:layout_below="@id/dateBorrow"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:text="Description"
                        android:textColor="#fdb501"
                        android:textSize="15dp" />


                    <TextView
                        style="@style/viewParent.headerText.contentText"
